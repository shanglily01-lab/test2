{
  "version": "3.0",
  "enabled": true,
  "description": "超级大脑V3.0配置文件",

  "entry_config": {
    "description": "入场配置 - 一次性精准入场",
    "enabled": true,
    "entry_timeout_minutes": 15,
    "wait_5m_confirmation": true,
    "check_interval_seconds": 30,
    "description_detail": "等待5M K线确认后一次性入场，15分钟超时"
  },

  "position_management": {
    "description": "持仓管理配置",
    "enabled": true,
    "trailing_stop": {
      "enabled": true,
      "threshold_usd": 40.0,
      "step_usd": 10.0,
      "description": "移动止盈: 40U门槛, 每10U移动一次"
    },
    "fixed_stop_loss_pct": 0.03,
    "fixed_take_profit_pct": 0.06,
    "max_holding_minutes": 240,
    "check_interval_seconds": 30,
    "description": "固定止损3%, 止盈6%, 最大持仓4小时"
  },

  "scoring_system": {
    "description": "评分系统配置",
    "enabled": true,
    "weights": {
      "big4": 5,
      "5h_trend": 8,
      "15m_signal": 10,
      "volume_price": 7,
      "technical": 10
    },
    "max_score": 40,
    "min_score_to_trade": 25,
    "description": "总分40, 阈值25 (62.5%)"
  },

  "big4_config": {
    "description": "Big4配置",
    "enabled": true,
    "min_strength": 60,
    "strong_strength": 70,
    "very_strong_strength": 80,
    "emergency_monitor": {
      "enabled": true,
      "emergency_strength_threshold": 12,
      "check_interval_seconds": 60,
      "description": "Big4紧急干预: 强度>=12且方向相反时立即平仓"
    },
    "veto_power": {
      "enabled": true,
      "veto_strength_threshold": 12,
      "description": "Big4否决权: 强度>=12且方向相反时拒绝开仓"
    },
    "description": "Big4强度阈值: 60基础, 70强, 80很强"
  },

  "margin_management": {
    "description": "保证金管理",
    "whitelist": 600,
    "blacklist_level_1": 600,
    "blacklist_level_2": 300,
    "blacklist_level_3": 0,
    "default": 400,
    "description": "白名单600U, 黑名单1级600U, 2级300U, 3级禁止"
  },

  "risk_control": {
    "description": "风险控制",
    "daily_loss_limit": 800,
    "consecutive_loss_limit": 2000,
    "consecutive_loss_days": 3,
    "min_win_rate_50_trades": 0.35,
    "position_reduce_pct": 0.50,
    "description": "日亏800熔断, 3日亏2000熔断, 50笔胜率<35%减仓50%"
  },

  "kline_config": {
    "description": "K线配置",
    "intervals": {
      "5h": {
        "count": 3,
        "description": "5H K线取3根"
      },
      "15m": {
        "count": 8,
        "description": "15M K线取8根 (2小时)"
      },
      "5m": {
        "count": 12,
        "description": "5M K线取12根 (1小时)"
      }
    }
  },

  "technical_indicators": {
    "description": "技术指标配置",
    "rsi": {
      "enabled": true,
      "period": 14,
      "oversold": 30,
      "overbought": 70
    },
    "macd": {
      "enabled": true,
      "fast_period": 12,
      "slow_period": 26,
      "signal_period": 9
    },
    "bollinger_bands": {
      "enabled": true,
      "period": 20,
      "std_dev": 2
    }
  },

  "logging": {
    "description": "日志配置",
    "level": "INFO",
    "log_entry": true,
    "log_exit": true,
    "log_scoring": true,
    "log_5m_confirmation": true,
    "log_trailing_stop": true
  },

  "test_mode": {
    "description": "测试模式",
    "enabled": false,
    "test_symbols": [
      "BTC/USDT",
      "ETH/USDT",
      "BNB/USDT",
      "SOL/USDT",
      "XRP/USDT"
    ],
    "small_position_size": 100,
    "description": "测试模式使用小仓位"
  }
}
